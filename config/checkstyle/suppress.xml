<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">
<suppressions>
    <suppress files=".*\.java" checks="MagicNumber"/>
    <suppress files="src/integration-test/.*\.java" checks="JavadocMethod"/>
    <suppress files="src/integration-test/.*\.java" checks="JavadocType"/>
    <suppress files="src/integration-test/.*\.java" checks="JavadocVariable"/>
    <suppress files="src/integration-test/.*\.java" checks="MissingJavadocMethod"/>

    <suppress files="src/test/.*\.java" checks="JavadocMethod"/>
    <suppress files="src/test/.*\.java" checks="JavadocType"/>
    <suppress files="src/test/.*\.java" checks="JavadocVariable"/>
    <suppress files="src/test/.*\.java" checks="MissingJavadocMethod"/>

    <suppress files="src/test-support/.*\.java" checks="JavadocMethod"/>
    <suppress files="src/test-support/.*\.java" checks="JavadocType"/>
    <suppress files="src/test-support/.*\.java" checks="JavadocVariable"/>
    <suppress files="src/test-support/.*\.java" checks="MissingJavadocMethod"/>
</suppressions>
